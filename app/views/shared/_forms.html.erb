<!-- create an activity -->
<div class="modal" id="modal-activity">
    <form action="/activities" method="post" class="form-wrapper">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="row">
      <div class="input-field col s12">
        <label for="title">Activity:</label>
        <input type="text" name="title" placeholder="Give a brief description of the activity">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="">Date:</label>
        <input type="date" class="datepicker" placeholder="" name="date">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="location">Location:</label>
        <input id="place-input" type="text" name="location" placeholder="Where is the activity?">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <label for="description">Details:</label>
        <textarea name="description" class="form-control" rows="10"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn waves-effect waves-light" type="submit" name="action">Create
        <i class="material-icons right">send</i>
      </button>
      <a href="#!" class="modal-action modal-close waves-effect waves-green">Close</a>
    </div>
    </form>
</div>



